#!/usr/bin/env bash

source $BIN_DIR/utils

# Install dependencies with Pip.
puts-step "Installing dependencies with pip"

[ ! "$FRESH_PYTHON" ] && bpwatch start pip_install
[ "$FRESH_PYTHON" ] && bpwatch start pip_install_first

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/app/.apt/usr/lib/x86_64-linux-gnu/:/app/.apt/usr/lib/atlas-base/atlas/:/usr/lib/gcc/x86_64-linux-gnu/4.8/
export INCLUDE=$INCLUDE:/usr/lib/gcc/x86_64-linux-gnu/4.8/
export LIBRARY_PATH=$LIBRARY_PATH:/usr/lib/gcc/x86_64-linux-gnu/4.8/
export BLAS=/app/.apt/usr/lib/libblas/libblas.so
export LAPACK=/app/.apt/usr/lib/lapack/liblapack.a
export PATH=$PATH:/app/.apt/usr/bin/

echo $(export)

/app/.heroku/python/bin/pip install -r requirements.txt --exists-action=w --src=./.heroku/src --allow-all-external  | cleanup | indent

# Smart Requirements handling
cp requirements.txt .heroku/python/requirements-declared.txt
/app/.heroku/python/bin/pip freeze > .heroku/python/requirements-installed.txt

[ ! "$FRESH_PYTHON" ] && bpwatch stop pip_install
[ "$FRESH_PYTHON" ] && bpwatch stop pip_install_first

echo
